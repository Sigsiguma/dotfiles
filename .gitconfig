[core]
    excludesfile = ${HOME}/.gitignore_global
    editor = nvim
[user]
    name = siguma
    email = you8jun5@gmail.com

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[alias]
    graph = "log --graph --pretty='format:%h %Cgreen%an%Creset | %s %Cred%d%Creset'"
    cm = commit -m
	st = status
	df = diff
	co = checkout
	br = branch
	delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %

[ghq]
    root = ~/src
